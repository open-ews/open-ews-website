---
import { Image } from "astro:assets";

import OpenEWSLogo from "../assets/images/open-ews-logo.png";
---

<header class="navbar navbar-expand-lg navbar-transparent py-3">
  <div class="container">
    <a href="/" class="navbar-brand">
      <Image
        src={OpenEWSLogo}
        alt="OpenEWS's Logo"
        class="navbar-brand-image"
      />
    </a>

    <div class="collapse navbar-collapse">
      <nav class="navbar-nav ms-auto">
        <div class="nav-item">
          <a class="nav-link active" href="/"
            ><span class="nav-link-title">Home</span></a
          >
        </div>
        <div class="nav-item">
          <a
            class="nav-link"
            href="https://www.somleng.org/docs/open-ews"
            target="_blank"><span class="nav-link-title">Documentation</span></a
          >
        </div>
        <div class="nav-item ms-4">
          <a
            href="https://github.com/open-ews/open-ews"
            class="btn btn-primary"
            target="_blank">Source Code</a
          >
        </div>
      </nav>
    </div>
  </div>
</header>
